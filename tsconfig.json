{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "baseUrl": "./src",
    "paths": {
      "Root/*": ["*"]
    },
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
